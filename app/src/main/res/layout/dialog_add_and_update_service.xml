<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    android:background="@color/transparent"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:paddingBottom="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title_dialog_add_and_update"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:background="@color/dark_blue"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Thêm dịch vụ"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_check_name_dialog_add_and_update_khachhang"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="*"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_name_dialog_add_and_update_service"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:hint="Tên dịch vụ"
            android:drawableTint="@color/edt_color"
            android:textColor="@color/my_blue"
            style="@style/edt_style"/>

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_check_money_dialog_add_and_update_khachhang"
            android:layout_marginTop="5dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="* Số tiền không hợp lệ"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_money_dialog_add_and_update_service"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:hint="Số tiền"
            android:drawableStart="@drawable/ic_dola"
            android:drawablePadding="10dp"
            android:textColor="@color/my_blue"
            style="@style/edt_style"/>

        <RadioGroup
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:checked="true"
                android:id="@+id/rdo_type_product_dialog_add_and_update_service"
                android:textStyle="bold"
                android:textColor="@color/dark_blue"
                android:text="Tính tiền theo sản phẩm (1Product)"
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>

            <RadioButton
                android:id="@+id/rdo_type_hour_dialog_add_and_update_service"
                android:textStyle="bold"
                android:textColor="@color/dark_blue"
                android:text="Tính tiền theo thời gian (2hour)"
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>

        </RadioGroup>

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_check_type_dialog_add_khachhang"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="* Chọn loại dịch vụ"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_and_update_service"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_background"
            android:layout_width="wrap_content"
            android:text="Thêm"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_height="35dp"
            android:layout_gravity="center"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>