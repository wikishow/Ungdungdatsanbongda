<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    android:background="@color/transparent"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:paddingBottom="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:background="@color/dark_blue"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Thêm khách hàng"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_check_phone_dialog_add_khachhang"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="* Số điện thoại không hợp lệ"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_phone_dialog_add_khachhang"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:hint="Phone"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:drawableTint="@color/edt_color"
            android:textColor="@color/my_blue"
            style="@style/edt_style"/>

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_check_name_dialog_add_khachhang"
            android:layout_marginTop="5dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="* Tên không hợp lệ"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_name_dialog_add_khachhang"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:hint="Name"
            android:drawableStart="@drawable/ic_user_circle"
            android:drawablePadding="10dp"
            android:drawableTint="@color/edt_color"
            android:textColor="@color/my_blue"
            style="@style/edt_style"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_cmnd_dialog_add_khachhang"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="8dp"
            android:hint="Cmnd"
            android:drawableStart="@drawable/ic_user_circle"
            android:drawablePadding="10dp"
            android:drawableTint="@color/edt_color"
            android:textColor="@color/my_blue"
            style="@style/edt_style"/>

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_check_address_dialog_add_khachhang"
            android:layout_marginTop="5dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="* Địa chỉ không hợp lệ"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_address_dialog_add_khachhang"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:hint="Address"
            android:drawableStart="@drawable/ic_address"
            android:drawablePadding="10dp"
            android:drawableTint="@color/edt_color"
            android:textColor="@color/my_blue"
            style="@style/edt_style"/>

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_check_pass_dialog_add_khachhang"
            android:layout_marginTop="5dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="* Mật khẩu từ 6 đến 10 kí tự"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            app:boxStrokeWidth="0dp"
            app:passwordToggleTint="@color/edt_color"
            app:passwordToggleEnabled="true"
            app:hintEnabled="false"
            app:boxStrokeWidthFocused="0dp">
            <android.widget.EditText
                android:id="@+id/edt_pass_dialog_add_khachhang"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:hint="Password 1"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="10dp"
                android:drawableTint="@color/edt_color"
                android:fontFamily="sans-serif"
                android:textColor="@color/my_blue"
                android:inputType="textPassword"
                style="@style/edt_style"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            app:boxStrokeWidth="0dp"
            app:passwordToggleTint="@color/edt_color"
            app:passwordToggleEnabled="true"
            app:hintEnabled="false"
            app:boxStrokeWidthFocused="0dp">
            <android.widget.EditText
                android:id="@+id/edt_pass2_dialog_add_khachhang"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="10dp"
                android:drawableTint="@color/edt_color"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:hint="Password 2"
                android:fontFamily="sans-serif"
                android:textColor="@color/my_blue"
                android:inputType="textPassword"
                style="@style/edt_style"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_check_pass2_dialog_add_khachhang"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="* 2 mật khẩu không trùng lặp"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_khachhang"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_background"
            android:layout_width="wrap_content"
            android:text="Thêm"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_height="35dp"
            android:layout_gravity="center"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>