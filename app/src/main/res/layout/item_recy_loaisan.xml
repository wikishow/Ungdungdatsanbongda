<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:id="@+id/tv_id_item_loaisan"
            android:background="@color/dark_blue"
            android:text="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_width="55dp"
            android:layout_height="55dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/tv_name_item_loaisan"
                android:paddingStart="12dp"
                android:textSize="20sp"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:text="Sân 5 người"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_money_item_loaisan"
                android:paddingStart="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_name_item_loaisan"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="16sp"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:text="100.000VNĐ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text=" / 1hour"
                app:layout_constraintTop_toTopOf="@id/tv_money_item_loaisan"
                app:layout_constraintStart_toEndOf="@id/tv_money_item_loaisan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>