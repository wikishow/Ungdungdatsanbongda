<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:background="@color/dark_blue"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/tv_title_item_thongbao_admin"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="center"
                android:text="Thông báo đóng cửa"
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>

            <TextView
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/tv_date_item_thongbao_admin"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="11.5sp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:drawablePadding="5dp"
                android:drawableTint="@color/white"
                android:drawableStart="@drawable/ic_date"
                android:text="09-12-2003"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_content_item_thongbao_admin"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông báo sân bóng sẽ đóng của vào ngày 20-8-2022 cho đến ngày 30-8-2022"/>

        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/tv_status_item_thongbao_admin"
            android:paddingStart="5dp"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:text="Đang hoạt động"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>